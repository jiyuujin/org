{
  "name": "company-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/company-app",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/company-app",
        "outputPath": "dist/apps/company-app"
      },
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "company-app:build",
        "dev": true
      },
      "configurations": {
        "production": {
          "buildTarget": "company-app:build:production",
          "dev": false
        }
      }
    },
    "css": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["unocss 'src/**/*.tsx' --out-file=src/styles/uno.css"],
        "cwd": "apps/company-app",
        "parallel": false
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "company-app:build:production"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p apps/company-app/tsconfig.lib.json"
      }
    },
    "tsm": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typed-scss-modules src",
        "cwd": "apps/company-app",
        "parallel": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
          "eslint ./app --ext .tsx,.ts,.jsx,.js --fix"
        ],
        "cwd": "apps/company-app",
        "parallel": false
      }
    }
  },
  "tags": []
}
