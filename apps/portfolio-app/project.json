{
  "name": "portfolio-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/portfolio-app",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx run portfolio-app:_build"
      }
    },
    "_build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/portfolio-app"
      },
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx run portfolio-app:_serve"
      }
    },
    "_serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "portfolio-app:_build",
        "dev": true
      },
      "configurations": {
        "production": {
          "buildTarget": "portfolio-app:_build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "portfolio-app:_build:production"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p apps/portfolio-app/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
          "eslint ./src --ext .tsx,.ts,.jsx,.js --fix"
        ],
        "cwd": "apps/portfolio-app",
        "parallel": false
      }
    }
  },
  "tags": []
}
