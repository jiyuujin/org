{
  "name": "portfolio-app",
  "sourceRoot": "apps/portfolio-app",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "astro build",
        "cwd": "apps/portfolio-app"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "astro dev",
        "cwd": "apps/portfolio-app"
      }
    },
    "css": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["unocss 'src/**/*.astro' --out-file=src/uno.css"],
        "cwd": "apps/portfolio-app",
        "parallel": false
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p apps/portfolio-app/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier --write \"**/*.{js,jsx,json,ts,tsx,astro,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
          "markuplint \"./src/**/*.astro\" --config .markuplintrc --format"
        ],
        "cwd": "apps/portfolio-app",
        "parallel": false
      }
    }
  },
  "tags": []
}
